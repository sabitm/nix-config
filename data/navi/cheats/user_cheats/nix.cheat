% nix

# nix get hash from url
nix-prefetch-url --type sha256 "<url>"

# nix convert sha256 hash to SRI
nix hash convert --hash-algo sha256 "<hash>"

# open port on nixos
sudo nixos-firewall-tool open tcp 8080

# optimize store
nix store optimise

# rebuild current system config
sudo nixos-rebuild switch --flake .#lbox
